<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:paddingTop="20dp">

    <TextView
        android:id="@+id/transaction_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/font_regular"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textColor="@color/text_dark_gray"
        android:textSize="14sp" />


    <RelativeLayout
        android:id="@+id/layout_inner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/transaction_date"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <ImageView
            android:id="@+id/type_icon"
            android:layout_width="18sp"
            android:layout_height="18sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_arrow_downward_black_24dp" />

        <LinearLayout
            android:id="@+id/layout_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/type_icon"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_regular"
                android:maxLines="1"
                android:text="Sent"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/text_dark_gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/supplimental"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:maxLines="1"
                android:text=""
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_type"
            android:layout_marginTop="@dimen/small_margin"
            android:ellipsize="end"
            android:fontFamily="@font/font_light"
            android:maxLines="1"
            android:text="0xDEADBEEFDEADBEEFDEADBEEFDEADBEEFD"
            android:textAppearance="?attr/textAppearanceListItemSecondary"
            android:textColor="@color/text_dark_gray"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toStartOf="@id/view_details"
            android:fontFamily="@font/font_semibold"
            android:text="+10"
            android:textColor="@color/green"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/view_details"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_chevron_right" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/layout_inner"
        android:layout_marginTop="20dp"
        android:background="@color/super_light_grey" />
</RelativeLayout>