<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <include layout="@layout/layout_simple_toolbar" />

    <RelativeLayout
        android:id="@+id/layout_eth_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_card"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="visible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="?android:attr/actionBarSize"
            android:layout_marginTop="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/font_semibold"
                    android:text="@string/title_send_activity"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:id="@+id/balance_eth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/font_light"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/font_light"
                        android:text="@string/ethereum"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_light"
                        android:text="@string/available"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_iframe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:clickable="true"
                    android:visibility="gone">

                    <WebView
                        android:id="@+id/iframe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </WebView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <include layout="@layout/item_input_address_new" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/font_semibold"
                        android:text="@string/amount"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp">

                        <RelativeLayout
                            android:id="@+id/layout_amount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@id/layout_amount_controls"
                            android:background="@drawable/background_round_blue_9dp">

                            <TextView
                                android:id="@+id/amount_edit_usd_symbol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/font_semibold"
                                android:paddingStart="15dp"
                                android:text="@string/usd_label"
                                android:textColor="@color/text_dark_gray"
                                android:textSize="36sp"
                                android:visibility="gone" />

                            <AutoCompleteTextView
                                android:id="@+id/edit_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/amount_edit_usd_symbol"
                                android:background="@color/transparent"
                                android:completionThreshold="1"
                                android:fontFamily="@font/font_semibold"
                                android:hint="0"
                                android:imeOptions="actionDone"
                                android:inputType="numberDecimal"
                                android:lines="1"
                                android:maxLines="1"
                                android:paddingEnd="15dp"
                                android:paddingStart="15dp"
                                android:textColor="@color/text_dark_gray"
                                android:textColorHint="@color/light_gray"
                                android:textSize="36sp" />

                            <TextView
                                android:id="@+id/amount_edit_token_symbol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/edit_amount"
                                android:fontFamily="@font/font_semibold"
                                android:paddingEnd="15dp"
                                android:textColor="@color/text_dark_gray"
                                android:textSize="36sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_amount_controls"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true">

                            <ImageButton
                                android:id="@+id/img_switch_usd_eth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@color/transparent"
                                android:padding="@dimen/big_padding"
                                android:src="@drawable/ic_switch_eth_usd"
                                android:visibility="gone" />

                            <ImageButton
                                android:id="@+id/img_quantity_up"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:background="@color/transparent"
                                android:paddingBottom="10dp"
                                android:paddingLeft="@dimen/big_padding"
                                android:paddingRight="@dimen/big_padding"
                                android:paddingTop="10dp"
                                android:src="@drawable/ic_quantity_up"
                                android:visibility="gone" />

                            <ImageButton
                                android:id="@+id/img_quantity_down"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_centerHorizontal="true"
                                android:background="@color/transparent"
                                android:paddingBottom="10dp"
                                android:paddingLeft="@dimen/big_padding"
                                android:paddingRight="@dimen/big_padding"
                                android:paddingTop="10dp"
                                android:src="@drawable/ic_quantity_down"
                                android:visibility="gone" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/amount_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/font_regular"
                        android:text="@string/error_invalid_amount"
                        android:textColor="@color/cancel_red"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/text_usd_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/font_regular"
                        android:paddingLeft="15dp"
                        android:text="US$ 0.00"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="21sp" />

                    <LinearLayout
                        android:id="@+id/layout_token_equivalent_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/text_token_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/font_regular"
                            android:text="0.00"
                            android:textColor="@color/text_dark_gray"
                            android:textSize="21sp" />

                        <TextView
                            android:id="@+id/text_token_symbol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/font_regular"
                            android:paddingLeft="5dp"
                            android:text="ETH"
                            android:textColor="@color/text_dark_gray"
                            android:textSize="21sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/layoutButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="20dp">

            <Button
                android:id="@+id/button_next"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_round_button"
                android:fontFamily="@font/font_semibold"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="@string/action_next"
                android:textAllCaps="false"
                android:textColor="@color/button_text_color"
                android:textSize="16sp" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
