<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/background_marketplace_event"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="15dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/big_margin"
        android:contentDescription="@string/empty"
        android:src="@mipmap/token_logo"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/balance_eth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textColor="@color/text_black"
            android:fontFamily="@font/font_light"
            android:textSize="21sp"
            tools:text="8888888" />

        <TextView
            android:id="@+id/balanceArray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textColor="@color/text_black"
            android:fontFamily="@font/font_light"
            android:textSize="21sp"
            android:visibility="gone"
            tools:text="" />

        <TextView
            android:id="@+id/symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_light"
            android:textColor="@color/text_black"
            android:text="@string/ethereum"
            android:textSize="21sp" />

        <!--<TextView-->
            <!--android:id="@+id/balance_currency"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--tools:text="$8888888" />-->

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_semibold"
            android:text="@string/ethereum_blockchain"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="11sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:background="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_semibold"
            android:text="@string/issuer"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/issuer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_semibold"
            android:text="@string/ethereum"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="11sp" />

        <View
            android:id="@+id/contract_seperator"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:layout_marginTop="2dp"
            android:background="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/contract_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_semibold"
            android:text="@string/erc20"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="gone"
            android:textSize="11sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/super_light_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_24_hrs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_24_hrs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_semibold"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:text="+10%" />

            <TextView
                android:id="@+id/text_24_hrs_sub"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/font_regular"
                android:textColor="@color/light_gray"
                android:textAllCaps="true"
                android:textSize="11sp"
                android:layout_height="wrap_content"
                android:text="@string/twenty_four_hours" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_appreciation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_appreciation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_semibold"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:text="$1,514" />

            <TextView
                android:id="@+id/text_appreciation_sub"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/font_regular"
                android:textColor="@color/light_gray"
                android:textAllCaps="true"
                android:textSize="11sp"
                android:layout_height="wrap_content"
                android:text="@string/appreciation" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_usd_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/balance_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_semibold"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:text="$16,662" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/font_regular"
                android:textColor="@color/light_gray"
                android:textAllCaps="true"
                android:textSize="11sp"
                android:layout_height="wrap_content"
                android:text="@string/usd_value" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>