<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <include layout="@layout/layout_simple_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_card">

        <io.stormbird.wallet.widget.ProgressView
            android:id="@+id/progress_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            tools:visibility="gone" />

        <LinearLayout
            android:id="@+id/layout_token_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="23dp"
            android:layout_marginTop="33dp"
            android:orientation="vertical"
            android:paddingLeft="33dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_light"
                android:textColor="@color/text_black"
                android:textSize="21sp"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/font_semibold"
                android:text="@string/ethereum_blockchain"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_token_details"
            android:layout_marginBottom="?actionBarSize"
            android:animateLayoutChanges="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listTickets"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@android:color/transparent"
                android:dividerHeight="10.0sp" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/layoutButtons"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="@color/button_green"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_use"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_button"
                android:fontFamily="@font/font_regular"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="@string/action_use"
                android:textAllCaps="false"
                android:textColor="@color/button_text_color"
                android:textSize="20sp" />

            <include layout="@layout/button_divider" />

            <Button
                android:id="@+id/button_sell"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_button"
                android:fontFamily="@font/font_regular"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="@string/action_sell"
                android:textAllCaps="false"
                android:textColor="@color/button_text_color"
                android:textSize="20sp" />

            <include layout="@layout/button_divider" />

            <Button
                android:id="@+id/button_transfer"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_button"
                android:fontFamily="@font/font_regular"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="@string/action_transfer"
                android:textAllCaps="false"
                android:textColor="@color/button_text_color"
                android:textSize="20sp" />
        </LinearLayout>

    </RelativeLayout>

    <io.stormbird.wallet.widget.SystemView
        android:id="@+id/system_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:background="@color/white"
        tools:visibility="gone" />

</LinearLayout>
