<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_card_shadow"
    android:maxHeight="220dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_iframeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <WebView
            android:id="@+id/iframe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:visibility="visible">

        </WebView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_select_ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/transparent"
        android:layout_alignTop="@id/layout_iframeholder"
        android:clickable="true"
        android:layout_alignBottom="@id/layout_iframeholder">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_usage_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@drawable/background_card_gray"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <WebView
            android:id="@+id/usage_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_light"
            android:text=""
            android:textColor="@color/text_black" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>